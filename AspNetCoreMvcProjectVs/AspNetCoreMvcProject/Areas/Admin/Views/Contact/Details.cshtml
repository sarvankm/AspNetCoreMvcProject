@model Contact
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="table-responsive pt-3">
        <table class="table table-bordered table-dark">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Street
                    </th>
                    <th>
                        CountryCity
                    </th>
                    <th>
                        IsDeleted
                    </th>
                </tr>
            </thead>
            <tbody>
                    <tr>
                        <td>
                            <img src="~/img/contact/@Model.Image" alt="Alternate Text" />
                        </td>
                        <td>
                            @Model.Street
                        </td>
                        <td>
                            @Model.CountryCity
                        </td>
                        <td>
                            @Model.IsDeleted
                        </td>

                        <td>
                            <a class="btn btn-success" asp-action="Details" asp-route-id="@Model.Id">
                                Detail
                            </a>
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@Model.Id">
                                Update
                            </a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">
                                Delete
                            </a>
                        </td>
                    </tr>
            </tbody>
        </table>
    </div>
</div>

