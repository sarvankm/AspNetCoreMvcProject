@model Blog
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="table-responsive pt-3">
        <table class="table table-bordered table-dark">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        IsDeleted
                    </th>
                </tr>
            </thead>
            <tbody>
                    <tr>
                        <td>
                            <img src="~/img/blog/@Model.Image" alt="Alternate Text" />
                        </td>
                        <td>
                            @Model.Name
                        </td>
                        <td>
                            @Model.Date
                        </td>
                        <td>
                            @Model.IsDeleted
                        </td>

                    </tr>
                
            </tbody>
        </table>
    </div>
</div>


