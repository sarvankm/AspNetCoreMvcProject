@model Event
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create New Event</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="EventName"></label>
                        <input class="form-control" asp-for="EventName">
                        <span class="text-danger" asp-validation-for="EventName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Venue"></label>
                        <input class="form-control" asp-for="Venue">
                        <span class="text-danger" asp-validation-for="Venue"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartTime"></label>
                        <input class="form-control" asp-for="StartTime">
                        <span class="text-danger" asp-validation-for="StartTime"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndTime"></label>
                        <input class="form-control" asp-for="EndTime">
                        <span class="text-danger" asp-validation-for="EndTime"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDateDayMonth"></label>
                        <input class="form-control" asp-for="StartDateDayMonth">
                        <span class="text-danger" asp-validation-for="StartDateDayMonth"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EventContent"></label>
                        <textarea rows="4" class="form-control" asp-for="EventContent"></textarea>
                        <span class="text-danger" asp-validation-for="EventContent"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="File"></label>
                        <input class="form-control" asp-for="File" accept="image/*">
                        <span class="text-danger" asp-validation-for="File"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Create</button>
                    <a class="btn btn-light" asp-controller="Dashboard" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_Validation" />
}

