@model Event
@{
    ViewData["Title"] = "Details";
}
    <div class="row">
        <div class="table-responsive pt-3">
            <table class="table table-bordered table-dark">
                <thead>
                    <tr>
                        <th>
                            Image
                        </th>
                        <th>
                            EventName
                        </th>
                        <th>
                            Venue
                        </th>
                        <th>
                            StartTime
                        </th>
                        <th>
                            EndTime
                        </th>
                        <th>
                            StartMonth
                        </th>
                        <th>
                            IsDeleted
                        </th>
                    </tr>
                </thead>
                <tbody>
                   
                    <tr>
                        <td>
                            <img src="~/img/event/@Model.Image" alt="Alternate Text" />
                        </td>
                        <td>
                            @Model.EventName
                        </td>
                        <td>
                            @Model.Venue
                        </td>
                        <td>
                            @Model.StartTime.ToString("h:mm tt")
                        </td>
                        <td>
                            @Model.EndTime.ToString("h:mm tt")
                        </td>
                        <td>
                            @Model.StartDateDayMonth.ToString("MMM")
                        </td>
                        <td>
                            @Model.IsDeleted
                        </td>

                    </tr>
                    
                </tbody>
            </table>
        </div>
    </div>

